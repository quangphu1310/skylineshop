@{
    ViewBag.Title = "Administrator";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<style>
    /* Tùy chỉnh kiểu dáng cho menu */
    ul.menu {
        list-style: none;
        padding: 0;
        text-align: center;
    }

        ul.menu li {
            display: inline-block;
            margin: 10px;
        }

            ul.menu li a {
                text-decoration: none;
                padding: 10px 20px;
                background-color: #3498db;
                color: #fff;
                border-radius: 5px;
            }

                ul.menu li a:hover {
                    background-color: #2980b9;
                }
</style>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tables</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-product-hunt fa-5x" aria-hidden="true"></i>

                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">@ViewBag.product</div>
                                <div>QUẢN LÝ SẢN PHẨM</div>
                            </div>
                        </div>
                    </div>
                    <a href="~/admin/products">
                        <div class="panel-footer">
                            <span class="pull-left">Xem chi tiết</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-user-circle fa-5x" aria-hidden="true"></i>

                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">@ViewBag.user</div>
                                <div>QUẢN LÝ NGƯỜI DÙNG</div>
                            </div>
                        </div>
                    </div>
                    <a href="~/admin/users">
                        <div class="panel-footer">
                            <span class="pull-left">Xem chi tiết</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-shopping-cart fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">@ViewBag.order</div>
                                <div>QUẢN LÝ ĐƠN HÀNG</div>
                            </div>
                        </div>
                    </div>
                    <a href="~/admin/orders">
                        <div class="panel-footer">
                            <span class="pull-left">Xem chi tiết</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>


        <!-- /.row -->


        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Đây là trang chủ
                    </div>

                    <div class="panel-body">
                        <ul class="menu">
                            <li>@Html.ActionLink("Quản lý sản phẩm", "Index", "products")</li>
                            <li>@Html.ActionLink("Quản lý người dùng", "Index", "users")</li>
                            <li>@Html.ActionLink("Quản lý đơn hàng", "Index", "orders")</li>
                        </ul>
                    </div>
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
